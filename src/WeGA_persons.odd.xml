                                    <rng:text/>
                                </rng:optional>
                                <rng:optional>
                                    <rng:ref name="note"/>
                                </rng:optional>
                            </rng:interleave>
                        </content>
                        <attList>
                            <attDef ident="cert" mode="add" usage="rwa">
                                <datatype>
                                    <rng:ref name="data.certainty"/>
                                </datatype>
                            </attDef>
                            <attDef ident="type" mode="add" usage="rwa">
                                <valList type="closed">
                                    <valItem ident="baptism"/>
